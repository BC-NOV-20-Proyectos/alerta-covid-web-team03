<% @places.each do |place| %>
  <tr>
    <td><%= place.institution.description %></td>
    <td><%= place.description %></td>
    <td><img src="data:image/png;base64, <%= place.qr_code %>" alt="Red dot" /></td>
  
    <%if current_user.has_role? :admin%>
      <td>
        <div class="btn btn-primary">
          <%= link_to edit_place_path(place), remote: true, style: 'color: #fff;' do %>
            <i class="far fa-edit"></i>
            <span>Edit</span>
          <% end %> 
        </div>
        <div class="btn btn-primary">
          <%= link_to place, method: :delete, data: { confirm: 'Are you sure?' }, style: 'color: #fff;' do %>
              <i class="fas fa-user-times"></i>
            <span>Delete</span>
          <% end %>
        </div>
      </td>
    <%end%>
  </tr>
<% end %>