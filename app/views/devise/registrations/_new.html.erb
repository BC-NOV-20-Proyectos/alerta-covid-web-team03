<div class="modal-dialog">

<%= simple_form_for(resource, as: resource_name, remote: true, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>
<div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Create User</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
  <div class="form-inputs">
    <%= f.input :name,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "name" }%>
    <%= f.input :lasname,
                required: true,
                input_html: { autocomplete: "lasname" }%>
    <%= f.input :control_number,
                required: true,
                input_html: { autocomplete: "control_number" }%>
    <%= f.input :email,
                required: true,
                input_html: { autocomplete: "email" }%>
    <%= f.input :password,
                required: true,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :password_confirmation,
                required: true,
                input_html: { autocomplete: "new-password" } %>
  </div>
      </div>
      <div class="modal-footer">
       <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
    <%= f.button :submit, "Create", :class => 'btn btn-primary create-button' %>
   
        
  </div>
    </div>
    <% end %>
  </div>