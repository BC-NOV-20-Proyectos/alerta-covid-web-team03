<p id="notice"><%= notice %></p>

<h1>Insititutions</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @insititutions.each do |insititution| %>
      <tr>
        <td><%= insititution.description %></td>
        <td><%= link_to 'Show', insititution %></td>
        <td><%= link_to 'Edit', edit_insititution_path(insititution) %></td>
        <td><%= link_to 'Destroy', insititution, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

